#ifndef _I2C_MASTER_H_FILE_H_
#define _I2C_MASTER_H_FILE_H_

#include <mega16.h>

#define F_CPU 8000000UL
#include <delay.h>
#include <math.h>
#define SCL_CLK 100000L							    /* Define SCL clock frequency */
#define BITRATE(TWSR)	((F_CPU/SCL_CLK)-16)/(2*pow(4,(TWSR&((1<<TWPS0)|(1<<TWPS1))))) /* Define bit rate by caculate TWBR */

void I2C_Init();								    /* I2C initialize function */

unsigned char I2C_Start (char slave_write_address);	/* I2C start function */

unsigned char I2C_Repeated_Start(char);				/* I2C repeated start function */

void I2C_Stop();								    /* I2C stop function */

void I2C_Start_Wait(char);						    /* I2C start wait function */

unsigned char  I2C_Write(char);						/* I2C write function */

char I2C_Read_Ack();							    /* I2C read ack function */

char I2C_Read_Nack();							    /* I2C read nack function */

#endif											    /* I2C_MASTER_H_FILE_H_ */